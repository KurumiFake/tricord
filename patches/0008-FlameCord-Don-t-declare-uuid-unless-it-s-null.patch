+++ b/proxy/src/main/java/net/md_5/bungee/connection/InitialHandler.java
@@ -514,7 +514,10 @@ public class InitialHandler extends PacketHandler implements PendingConnection
                     {
                         loginProfile = obj;
                         name = obj.getName();
-                        uniqueId = Util.getUUID( obj.getId() );
